{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ice-cafe-casablanca/domain": ["shared/domain/src/index.ts"],
      "@ice-cafe-casablanca/data-access": ["shared/data-access/src/index.ts"],
      "@ice-cafe-casablanca/ui-layout": ["shared/ui-layout/src/index.ts"],
      "@ice-cafe-casablanca/ui-product": ["shared/ui-product/src/index.ts"],
      "@ice-cafe-casablanca/util-seo": ["shared/util-seo/src/index.ts"],
      "@ice-cafe-casablanca/feature-ice": ["features/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
